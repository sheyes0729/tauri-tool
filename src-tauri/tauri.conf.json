{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "tauri-tool",
    "version": "1.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://**", "http://**"]
      },
      "fs": {
        "all": true,
        "scope": ["$RESOURCE/*", "$APP/*"]
      },
      "globalShortcut": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "window": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 640,
        "title": "Tauri Tool",
        "width": 960,
        "minHeight": 640,
        "minWidth": 960,
        "center": true,
        "visible": false
      },
      {
        "fullscreen": false,
        "decorations": false,
        "center": true,
        "visible": true,
        "height": 200,
        "width": 540,
        "resizable": false,
        "label": "splashscreen",
        "url": "splash.html"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "category": "Entertainment",
      "targets": "all",
      "copyright": "Designed By xie0729@yeah.com",
      "identifier": "com.sheyes.tool",
      "longDescription": "a tool desktop app cross app platforms built by tauri",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "./App"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "zh-CN"
        },
        "allowDowngrades": false
      }
    },
    "updater": {
      "active": false
    }
  }
}
